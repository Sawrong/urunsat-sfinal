@model UrunSatisPortali.Models.UrunEkle;

@{
    ViewData["Title"] = "Urunler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<form class="form-group" method="post" enctype="multipart/form-data">

    <b>URUN ADI</b>
    @Html.TextBoxFor(x => x.productName, new { @class = "form-control" })
    <br />
    <b>STOK</b>
    @Html.TextBoxFor(x => x.productStock, new { @class = "form-control" })
    <br />
    <b>Açıklama</b>
    @Html.TextAreaFor(x => x.productExplain, new { @class = "form-control" })
    <br />
    <b>Fiyat</b>
    @Html.TextBoxFor(x => x.productPrice, new { @class = "form-control" })
    <br />

    <b>Kategoriler</b>
    @Html.DropDownListFor(x => x.categoryID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    <br />
    <b>Resim Ekle</b>
    <br />
    <input name="productImage" type="file">
    <br />
    <br />
    <br />

    <button class="btn btn-info">Urun Ekle</button>
</form>